<table class="table table-striped">
  <caption></caption>
  <thead>
  <tr>
    <th>试卷名称</th>
    <th>语言</th>
    <th>用途</th>
    <th>考试时间</th>
    <th>状态</th>
  </tr>
  </thead>
  <tbody>
  <% if @tests.blank? %>
      <tr placeholder>
        <td colspan="4">该人员还未参加任何考试</td>
      </tr>
  <% else %>
      <% @tests.each do |test| %>
      <tr class="<%= test.completed? ? '' : 'warning' %>">
        <td><%= test.paper.name %></td>
        <td><%= test.paper.language %></td>
        <td><%= test.paper.purpose %></td>
        <td>
          <%= test.started_at %>
        </td>
        <td>
          <% if test.completed? %>
              <a class="btn btn-success" href='<%= test_path(test) %>'>查看成绩报告</a>
          <% else %>
              考试未完成
          <% end %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
  <tfoot>

  </tfoot>
</table>